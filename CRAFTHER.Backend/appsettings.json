{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Authentication": "Debug", // <-- เพิ่มตรงนี้
      "Microsoft.AspNetCore.Authorization": "Debug" // <-- เพิ่มตรงนี้
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=CRAFTHER_DB;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True;"
    // ถ้าใช้ SQL Server Express อาจจะเป็น "Server=(localdb)\\mssqllocaldb;"
    // หรือถ้าใช้ User/Password: "Server=YourServerName;Database=CRAFTHER_DB;User ID=YourUser;Password=YourPassword;TrustServerCertificate=True"
  },
  "JwtSettings": {
    "Secret": "ThisIsAVeryLongAndComplexSecretKeyForCRAFTHERBackendAPIThatIsMoreThan50CharactersLongAndVeryStrongAndSecure!",
    "Issuer": "CRAFTHER.Backend.API", // ผู้ที่ออก Token
    "Audience": "CRAFTHER.Frontend.App", // ผู้รับ Token (Client ที่จะใช้ API)
    "TokenExpirationMinutes": 60 // อายุของ Token ในหน่วยนาที
  }
}